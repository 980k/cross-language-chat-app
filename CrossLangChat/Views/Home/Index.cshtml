@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class = "dashboard-container">
        <div class="sidebar">
            <div class="users-list">
                <div class="user">Chatroom 1</div>
                <div class="user">Chatroom 2</div>
                <div class="user">Chatroom 3</div>
                <!-- Add more users as needed -->
            </div>
        </div>
        <div class="chat-container">
            <div class="chat-header">Chatting with User</div>
            <div class="chat-box" id="chat-box"></div>
            <div class="input-container">
                <input classs="type-message-input" type="text" id="user-input" placeholder="Type your message...">
                <button class="send-message-button">Send</button>
            </div>
        </div>
    </div>
</body>
</html>